{% extends '::base.html.twig' %}

{% block layout %}
    {% embed '@KisaanCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'kisaan_user' %}

        {% block main %}
            <div class="col-xs-12">
                {% include 'KisaanCoreBundle:Frontend/Common:_flash.html.twig' %}
                <div id="form-registerlogin" class="form-signup validate-form">
                    <h1>{{ 'listing.new.signup.title'|trans({},'kisaan_listing') }}</h1>

                    <form class="form" action="{{ path('kisaan_user_register') }}" method="POST" autocomplete="off">

                        {% include '@KisaanUser/Frontend/Common/_login_register.html.twig' with {
                        'form_registration': form,
                        'form_login': false
                        } only %}

                        <div class="btn-block text-center">
                            <button type="submit" class="btn btn-default">{{ 'registration.submit'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        {% endblock %}

    {% endembed %}
{% endblock layout %}
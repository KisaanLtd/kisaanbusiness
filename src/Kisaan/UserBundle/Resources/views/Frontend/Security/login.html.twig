{% extends '::base.html.twig' %}

{% block layout %}
    {% embed '@KisaanCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'kisaan_user' %}

        {% block main %}
            {% include 'KisaanCoreBundle:Frontend/Common:_flash.html.twig' %}

            <div id="form-registerlogin" class="form-signup validate-form">
                <h1>{{ 'listing.new.signup.title'|trans({},'kisaan_listing') }}</h1>
                {#Login And Register Form#}
                <form class="form-signup" action="{{ path("kisaan_user_login_check") }}"
                      method="POST">
                    {% include '@KisaanUser/Frontend/Common/_login_register.html.twig' with {
                    'form_registration': false,
                    'form_login': form
                    } only %}

                    <div>
                        <a href="{{ path('kisaan_user_resetting_request') }}">
                            {{ 'user.password_forgotten'|trans }}
                        </a>
                    </div>

                    <div class="btn-block text-center">
                        <button type="submit" class="btn btn-default">{{ 'user.login.submit'|trans }}</button>
                    </div>
                </form>

            </div>
        {% endblock %}

    {% endembed %}
{% endblock layout %}

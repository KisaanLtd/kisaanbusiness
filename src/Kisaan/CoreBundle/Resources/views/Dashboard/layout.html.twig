{% extends '::base.html.twig' %}

{% trans_default_domain 'kisaan' %}

{% block layout %}

    {% include '@KisaanCore/Frontend/Common/_header.html.twig' only %}

    <!-- contain main informative part of the site -->
    <main id="main" role="main">
        <div class="container">
            <div class="row">
                <!-- breadcrumbs -->
                {{ render(controller('KisaanBreadcrumbBundle:Breadcrumbs:index',{
                    request: app.request
                })) }}

                <!-- main-tabs -->
                <div class="main-tabs col-xs-12">
                    <!-- tabs -->
                    <div role="tabpanel">
                        <!-- form-switchers -->
                        {{ render(controller("KisaanUserBundle:Dashboard/Profile:profileSwitch")) }}

                        {% block nav_dashboard -%}
                            {% include 'KisaanCoreBundle:Dashboard/Common:_nav.html.twig' with {
                            'nav_dashboard_current': nav_dashboard_current
                            } only %}
                        {%- endblock %}

                        <div class="tab-content">
                            {% block main_dashboard %}

                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {#popin#}
        {% block modal %}{% endblock %}
    </main>

    {% include '@KisaanCore/Frontend/Common/_footer.html.twig' only %}

{% endblock %}

